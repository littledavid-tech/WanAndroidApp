<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <ImageView
            android:id="@+id/my_collected_item_ivMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/my_collected_article_menu" />

        <TextView
            android:id="@+id/my_collected_item_tvArticleTitle"
            style="@style/TitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_article_item_tvTag"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/my_collected_item_ivMenu"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Article Title " />

        <ImageView
            android:id="@+id/my_collected_item_ivAuthorIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:src="@drawable/app_article_author_flag" />

        <TextView
            android:id="@+id/my_collected_item_tvAuthor"
            style="@style/AppLinkTextView"
            android:layout_width="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/my_collected_item_ivAuthorIcon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Author" />

    </RelativeLayout>

</android.support.v7.widget.CardView>