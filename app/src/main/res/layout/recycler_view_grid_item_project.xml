<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/main_project_item_ivAuthorFlag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/app_article_author_flag" />

        <ImageView
            android:id="@+id/main_project_item_ivLike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/main_project_item_tvProjectAuthor"
            style="@style/AppLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/main_project_item_ivAuthorFlag"
            android:text="Author"
            android:textColor="@color/primary_text" />

        <TextView
            android:id="@+id/main_project_item_tvTime"
            style="@style/AppSecondTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/main_project_item_ivAuthorFlag"
            android:layout_below="@id/main_project_item_tvProjectAuthor"
            android:layout_toRightOf="@id/main_project_item_ivAuthorFlag"
            android:text="2018-11-15"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/main_project_item_ivCoverImg"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@id/main_project_item_ivAuthorFlag"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/main_project_item_tvTitle"
            style="@style/TitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_project_item_ivCoverImg"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="3" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
